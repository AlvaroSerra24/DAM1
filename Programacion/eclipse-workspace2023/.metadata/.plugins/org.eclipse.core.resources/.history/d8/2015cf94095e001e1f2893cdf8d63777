package bucles;

public class EjemploWhile {
	
	public static void main(String[] args) throws InterruptedException {
		//Bucle While
		
		//Pares entre 0 y 20
		int i=0;//iterador del bucle con cu inicial
		while(i<=20) {
			System.out.print(i+" ");
			i=i+2;
			//i++;//i=i+1
			//Thread.sleep(500);
		}
		System.out.println();
		//Multiplos de 3 entre 3 y 21
		int j=3;//iterador
		while(j<=21) {
			System.out.print(j+" ");
			j+=3;
		}
	}
}
